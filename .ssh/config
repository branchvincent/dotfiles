# -*- mode: ssh-config -*-
Include ~/.orbstack/ssh/config
Include ~/.config/work/ssh/config
Include ~/.ssh/config.local

Host *
    ControlMaster auto
    ControlPath ~/.local/state/ssh-%C
    ControlPersist yes
    ForwardX11 yes
    SendEnv COLORTERM
    ServerAliveInterval 300
    UserKnownHostsFile ~/.ssh/known_hosts
