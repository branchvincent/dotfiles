#!/usr/bin/env bash
#
# Bootstraps the machine by sourcing all scripts in bootstrap.d/

set -euo pipefail
[ -n "${DEBUG:-}" ] && set -x

for file in "${BASH_SOURCE[0]}.d"/*.sh; do
    [[ $(basename "$file") =~ ${BOOTSTRAP_FILTER:-.*} ]] || continue
    echo "Executing $file"
    source "$file"
done
