[alias]
# Existing commands
ci = commit
cl = clone --recurse-submodules
co = checkout --quiet
l = log
ph = push --quiet
pl = pull --quiet
rs = restore
s = status --short --branch
st = stash push --include-untracked
sw = switch --quiet

# Custom commands
aliases = "!git config --get-regexp '^alias\\.' | cut -c 7- | sed 's/ / = /' | sort"
amend = commit --amend --no-edit
branches = branch --all -vv
discard = checkout --
discard-all = !git reset --hard HEAD && git clean -d --force
delete-tag = "!f() { git tag -d $1 && git push --quiet --delete origin $1; }; f"
fixup = !git commit --amend --no-edit && git push --quiet --force
graph = log --graph --all --decorate
head = log -n1
ignore = "!f() { curl -sL https://www.gitignore.io/api/$(echo $@ | tr ' ' ',') | sed '1,4d;$d;' ;}; f"
ll = log --max-count=5
pr = !gh pr
prune-branches = !git branch -vv | awk '/: gone]/ && !/\\*/ {print $1}' | xargs -pn1 git branch -D
publish = push --quiet --set-upstream origin HEAD
remotes = remote --verbose
staged = diff --cached
stashes = stash list
sync = !git pull --all --rebase --autostash && git push --quiet
tags = tag --list -n1 --sort=-version:refname
uncommit = reset --soft HEAD~1
unpublish = !git push --quiet origin --delete $(git branch --show-current)
unstage = reset --quiet HEAD --
untrack = rm --cached
