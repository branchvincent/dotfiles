# -*- mode: ssh-config -*-
Include ~/.config/ssh/conf.d/*.conf

Host *
    ControlMaster auto
    ControlPath ~/.local/state/ssh-%C
    ControlPersist yes
    IdentityAgent "~/Library/Group Containers/2BUA8C4S2C.com.1password/t/agent.sock"
    SendEnv COLORTERM
    UserKnownHostsFile ~/.config/ssh/known_hosts
